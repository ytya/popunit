<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
  <title>PopUnit</title>

  <!-- CSS  -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link href="css/style.css" type="text/css" rel="stylesheet" media="screen,projection"/>
</head>
<body>
  <!-- ブランド選択 -->
  <div class="container">
    <div class="row">
      <div class="col col-brand s6 m4 l4 xl2 offset-xl1">
        <input type="checkbox" class="check-brand" value="765AS">
        <label class="btn-small btn-brand btn-brand-765as" >アイドルマスター</label>
      </div>
      <div class="col col-brand s6 m4 l4 xl2">
        <input type="checkbox" class="check-brand" value="シンデレラガールズ">
        <label class="btn-small btn-brand btn-brand-cinderella" >シンデレラガールズ</label>
      </div>
      <div class="col col-brand s6 m4 l4 xl2">
        <input type="checkbox" class="check-brand" value="ミリオンライブ">
        <label class="btn-small btn-brand btn-brand-million" >ミリオンライブ</label>
      </div>
      <div class="col col-brand s6 m4 l4 xl2">
        <input type="checkbox" class="check-brand" value="SideM">
        <label class="btn-small btn-brand btn-brand-sidem" >SideM</label>
      </div>
      <div class="col col-brand s6 m4 l4 xl2">
        <input type="checkbox" class="check-brand" value="シャイニーカラーズ">
        <label class="btn-small btn-brand btn-brand-shiny" >シャイニーカラーズ</label>
      </div>
    </div>
  </div>

  <!-- 属性選択 -->
  <% let attrs = [['flower', '花'], ['fire', '炎'], ['snow', '雪'], ['heaven', '天'], ['rainbow', '虹'], ['light', '光'], ['ocean', '海'], ['darkness', '闇'], ['sky', '空'], ['wind', '風'], ['moon', '月'], ['dream', '夢'], ['thunder', '雷'], ['star', '星'], ['love', '愛']] %>
  <div class="container flex-row">
    <div class="label-attr">
      属性1
    </div>
    <div class="flex-attr">
      <% for (let attr of attrs) { %>
        <div class="col-attr">
          <input type="checkbox" class="check-attr" name="check-attr1" value="<%= attr[1] %>"><label class="btn-attr btn-attr-<%= attr[0] %>"><%= attr[1] %></label>
        </div>        
      <% } %>
    </div>
  </div>
  <div class="container flex-row">
    <div class="label-attr">
      属性2
    </div>
    <div class="flex-attr">
      <% for (let attr of attrs) { %>
        <div class="col-attr">
          <input type="checkbox" class="check-attr" name="check-attr2" value="<%= attr[1] %>"><label class="btn-attr btn-attr-<%= attr[0] %>"><%= attr[1] %></label>
        </div>        
      <% } %>
    </div>
  </div>
  <div class="container flex-row">
    <div class="label-attr">
      属性3
    </div>
    <div class="flex-attr">
      <% for (let attr of attrs) { %>
        <div class="col-attr">
          <input type="checkbox" class="check-attr" name="check-attr3" value="<%= attr[1] %>"><label class="btn-attr btn-attr-<%= attr[0] %>"><%= attr[1] %></label>
        </div>        
      <% } %>
    </div>
  </div>

  <div class="container sortable-table">
    <table id="idol_table">
      <thead>
        <tr>
          <th data-id="idol1">アイドル1</th>
          <th data-id="idol2">アイドル2</th>
          <th data-id="idol3">アイドル3</th>
          <th data-id="vo" sortable>Vo</th>
          <th data-id="da" sortable>Da</th>
          <th data-id="vi" sortable>Vi</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>

  </body>
</html>
